---
import fotopablo from '../assets/fotopablo.png';
import Badge from '../components/Badge.astro';
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import SocialPill from '../components/SocialPill.astro';
import AcademicTraining from '../components/AcademicTraining.astro';
import Projects from '../components/Projects.astro';

import LinkedinIcon from '../components/icons/Linkedin.astro';
import GithubIcon from '../components/icons/GitHub.astro';
import EmailIcon from '../components/icons/Email.astro';


// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title='Porfolio - Pablo Leandro Marello González - Desarrollador y programador Web full stack'
				description='Disponible para trabajar. Técnico en Desarrollo de Software, Programador web. Especializado en base de datos.'
>
	<main >
		<section class="w-full mx-auto lg:w-[740px] py-40 px-6">
			<div class="flex flex-row">
				<img 
  			class="rounded-full size-14 md:size-16 lg:size-20 mb-4 mr-4"
  			src={fotopablo.src}  
  			alt="Logo porfolio">
				<a href="https://www.linkedin.com/in/pablo-leandro-marello-gonz%C3%A1lez-b709a8272/"
				target="_blank"
				rel="noopener"
				class="flex justify-center items-center"
				>
				<Badge>#Open to work</Badge></a>
			</div>
			
			<h1 class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-4">
				¡Hola! Soy Pablo Leandro Marello González
				</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<span class="text-red-300/80">Técnico en Desarrollo de Software.</span>
				<span class="text-yellow-200/80"> Dev Full Stack</span>
			</h2>

			<nav class="flex gap-4 flex-grap ">
				
					<SocialPill href="https://www.linkedin.com/in/pablo-leandro-marello-gonz%C3%A1lez-b709a8272/">
						<LinkedinIcon src="" alt="Icono de linkedin" class="size-4 lg:size-6" />
							LinkedIn
					</SocialPill>
					<SocialPill href="https://github.com/pablomarello" >
						<GithubIcon class="size-4 lg:size-6"/>
						GitHub
					</SocialPill>
					<SocialPill>
						<EmailIcon  class="size-4 lg:size-6"/>
						plmarello@gmail.com
					</SocialPill>
					
				
			</nav>
		</section>

		<!--Sección Formacion Academica -->
		<section class="w-full mx-auto lg:w-[740px]" id="formacion-academica">
			<h2 class="text-xl lg:text-2xl text-wrap pb-4 semi-bold">Formación Académica</h2>
			<AcademicTraining />
		</section>

		<!--Sección Proyectos -->
		<section class="w-full mx-auto lg:w-[740px] pt-20" id="proyectos">
			<h2 class="text-xl lg:text-2xl text-wrap pb-4 semi-bold">Proyectos</h2>
			<Projects />
		</section>
		
		
	</main>
	<!-- <Welcome /> -->
</Layout>
